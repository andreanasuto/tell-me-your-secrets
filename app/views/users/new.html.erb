<h1>New User</h1>
<%= form_for(:user, :url => users_path) do |f| %>
  <%= f.label :Nickname %>
  <%= f.text_field :name %><br />

  <%= f.label :email %>
  <%= f.email_field :email %><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br />

  <%= f.submit "Create New User" %>
<% end %>

<p><%= link_to "Log in or sign up with Github", login_path %></p>
